{% set filter = filter|default('monsieurbiz_author_image_thumbnail') %}
{% set classes = classes|default('') %}
{% set placeholder = placeholder|default('200x200.png') %}

{% if author.image %}
    {% set path = author.image|imagine_filter(filter) %}
{% else %}
    {% if use_webpack %}
        {% set path = asset('build/shop/images/' ~ placeholder, 'shop') %}
    {% else %}
        {% set path = asset('assets/shop/img/' ~ placeholder) %}
    {% endif %}
{% endif %}

<img src="{{ path }}" alt="{{ author.name }}" {% if classes is not empty%}class="{{ classes|escape('html_attr') }}"{% endif %}>
